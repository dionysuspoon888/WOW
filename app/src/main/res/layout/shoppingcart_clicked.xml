<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.8">
        <ImageView
            android:id="@+id/image_shopping_clicked_view"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_shopping_clicked_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_shopping_clicked_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:text="HK$ " />
        <TextView
            android:id="@+id/text_shopping_clicked_qunatity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:text="Quantity: " />

    <TextView
        android:textSize="30sp"
        android:text="Sample Shopping Cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
     </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">



        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ffb443"
            android:text="Add to Cart"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:onClick="addToCart"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff000d"
            android:text="Pay Now"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:onClick="payNow"/>


    </LinearLayout>

</LinearLayout>



